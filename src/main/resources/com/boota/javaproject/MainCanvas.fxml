<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.boota.javaproject.MainCanvasController"
            stylesheets="@styles.css">

    <!-- Top section of BorderPane (optional for title or branding) -->
    <top>
        <Label text="Main Menu" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center; -fx-padding: 10px;" />
    </top>

    <!-- Center section containing the buttons -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px; -fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Button text="ClassDiagram" onAction="#openClassDiagramCanvas" styleClass="custom-button"/>
            <Button text="UseCaseDiagram" onAction="#openUseCaseDiagramCanvas" styleClass="custom-button"/>
            <Button text="Upload Class Diagram" styleClass="custom-button"/>
            <Button text="Upload Use Case Diagram" styleClass="custom-button"/>
            <Button text="Close" onAction="#close" styleClass="custom-close-button"/>
        </VBox>
    </center>

    <bottom>
        <Label text="Muhammad Ahmad 98.9% contributer, Muteeb 1.1% contributer, If include chat gpt 75% contributer" style="-fx-font-size: 12px; -fx-alignment: center; -fx-padding: 10px;" />
    </bottom>

